<script>
    $(document).ready(function () {
        var divVideo = $('#videos_prototype');
        var divImage = $('#images_prototype');

        divVideo.data('index', {{ trick.trickVideos|length }});
        divImage.data('index', {{ trick.trickImages|length }});

        var deleteButton = "<button type=\"button\" class=\"close\" aria-label=\"Close\">\n" +
            "  <span aria-hidden=\"true\">&times;</span>\n" +
            "</button>";

        // Add a delete button to all videos and images
        $(".video_row").each(function (index, element) {
            // element == this
            element.add(deleteButton).addClass('delete_btn');
        });
    });

    $('#newVid').on('click', function (e) {
        e.preventDefault();

        var divVideo = $('#videos_prototype');
        var divImage = $('#images_prototype');

        var prototype = divVideo.data('prototype');
        var index = divVideo.data('index');

        console.log(prototype);

        var newForm = prototype.replace(/__videos_prot__/g, index);

        divVideo.data('index', index + 1);
        divImage.data('index', index + 1);


        $('#trick_trickVideos').append(newForm);
        //var prototype = $(this).data()
    });

    $('#newImg').on('click', function (e) {
        e.preventDefault();

        var divVideo = $('#videos_prototype');
        var divImage = $('#images_prototype');

        var prototype = divImage.data('prototype');
        var index = divImage.data('index');

        console.log(prototype);

        var newForm = prototype.replace(/__images_prot__/g, index);

        divVideo.data('index', index + 1);
        divImage.data('index', index + 1);


        $('#trick_trickImages').append(newForm);
    });
</script>


